s() {
    ag "$1" --ignore dist --ignore node_modules
}

vik_mode() {
  say VIK MODE ACTIVATED!
  afplay /System/Library/Sounds/Funk.aiff

  say HACKING PENTAGON IN 60 SECONDS
  afplay /System/Library/Sounds/Sosumi.aiff
}

# Github shortcuts
